{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    
        <div class="form-group">
            {{ form_label(registrationForm.username, 'Pseudo') }}
            {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.avatar, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <div class="form-group form-check">
            {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', { 'label_attr': {'class': 'form-check-label'} }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm)}}
    </div>
{% endblock %}
