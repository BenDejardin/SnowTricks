{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container-fluid" style="background-color: #f7f7f7; min-height: 100vh;">
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <div class="col-md-6">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger">{{ flash_error }}</div>
                {% endfor %}
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Réinitialiser votre mot de passe</h1>

                        {{ form_start(requestForm, {'attr': {'class': 'form'}}) }}
                        <div class="form-group">
                            {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse électronique'}}) }}
                        </div>
                        <div class="text-center">
                            <small>
                                Saisissez votre adresse électronique et nous vous enverrons un
                                lien pour réinitialiser le mot de passe.
                            </small>
                        </div>

                        <div class="text-center mt-4">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
